<%= form_with url: import_data_records_path, multipart: false do |form| %>
  <div class="form-group">
    <%= form.label :file, "选择 CSV 文件" %>
    <%= form.file_field :file, accept: '.csv', required: true %>
  </div>
  <%= form.submit "上传并更新数据记录", class: "btn btn-primary" %>
<% end %>
<hr/>
<table>
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Value</th>
    <th>Operation</th>
  </tr>
  </thead>
  <tbody>
  <% @data_records.each do |data_record| %>
    <tr>
      <td><%= data_record.id %></td>
      <td><%= data_record.name %></td>
      <td><%= data_record.value %></td>
      <td>
        <%= link_to '编辑', edit_data_record_path(data_record) %>|
        <%= button_to '删除', data_record_path(data_record), method: :delete, data: { turbo_confirm: '确定要删除这条记录吗？' }, form: { style: 'display:inline-block;' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @data_records %>
