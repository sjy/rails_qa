<h1>编辑 Data Record</h1>

<%= form_with model: @data_record, url: data_record_path(@data_record), method: :patch do |form| %>
  <div class="form-group">
    <%= form.label :name, "名称" %>
    <%= form.text_field :name, class: "form-control", :disabled => true %>
  </div>

  <div class="form-group">
    <%= form.label :value, "估值" %>
    <%= form.text_field :value, class: "form-control" %>
  </div>

  <%= form.submit "保存修改", class: "btn btn-primary" %>
<% end %>
