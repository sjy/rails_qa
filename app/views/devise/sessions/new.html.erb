<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { 'data-parsley-validate': '' }) do |f| %>
  <div class="field">
    <%= f.label :email %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: "required", 'data-parsley-required-message': '请输入您的邮箱' %>
  </div>

  <div class="field">
    <%= f.label :password %><br/>
    <%= f.password_field :password, autocomplete: "current-password", required: "required", 'data-parsley-required-message': '请输入您的密码' %>
  </div>

  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
